{
    "extends": "airbnb",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".mjs"
                ]
            }
        }
    },
    "rules": {
        "max-len": [
            "error",
            120
        ],
        "indent": [
            "error",
            4
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-multi-assign": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-return-assign": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_."
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "import/no-extraneous-dependencies": [
            "off"
        ],
        "import/extensions": [
            "error",
            {
                "mjs": "ignorePackages"
            }
        ],
        "import/no-unresolved": [
            "error",
            {
                "ignore": [
                    "^components\/"
                ]
            }
        ],
        "react/destructuring-assignment": [
            "off"
        ]
    }
}
